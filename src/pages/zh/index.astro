---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import Features from '../../components/Features.astro';
import Benchmarks from '../../components/Benchmarks.astro';
import { useTranslations } from '../../i18n';

const lang = 'zh';
const t = useTranslations(lang);
---

<BaseLayout title={t('site.title')} lang={lang}>
  <Hero lang={lang} />
  <Features lang={lang} />
  <Benchmarks lang={lang} />

  <!-- Documentation Links Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">{t('docs.title')}</h2>
        <p class="text-lg text-gray-600">
          {t('docs.description')}
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <a
          href="https://github.com/fractalbits-labs/fractalbits-main/blob/main/docs/internals/ARCHITECTURE.md"
          target="_blank"
          rel="noopener noreferrer"
          class="block p-6 bg-gray-50 rounded-xl hover:bg-primary-50 transition-colors group"
        >
          <div class="flex items-center mb-3">
            <svg class="w-6 h-6 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <h3 class="font-semibold text-gray-900 group-hover:text-primary-600">{t('docs.architecture')}</h3>
          </div>
          <p class="text-sm text-gray-600">
            {t('docs.architecture.desc')}
          </p>
        </a>

        <a
          href="https://github.com/fractalbits-labs/fractalbits-main/blob/main/docs/S3_API_COMPATIBILITY.md"
          target="_blank"
          rel="noopener noreferrer"
          class="block p-6 bg-gray-50 rounded-xl hover:bg-primary-50 transition-colors group"
        >
          <div class="flex items-center mb-3">
            <svg class="w-6 h-6 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
            <h3 class="font-semibold text-gray-900 group-hover:text-primary-600">{t('docs.s3api')}</h3>
          </div>
          <p class="text-sm text-gray-600">
            {t('docs.s3api.desc')}
          </p>
        </a>

        <a
          href="https://github.com/fractalbits-labs/fractalbits-main/blob/main/docs/ROADMAP.md"
          target="_blank"
          rel="noopener noreferrer"
          class="block p-6 bg-gray-50 rounded-xl hover:bg-primary-50 transition-colors group"
        >
          <div class="flex items-center mb-3">
            <svg class="w-6 h-6 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            <h3 class="font-semibold text-gray-900 group-hover:text-primary-600">{t('docs.roadmap')}</h3>
          </div>
          <p class="text-sm text-gray-600">
            {t('docs.roadmap.desc')}
          </p>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-br from-primary-600 to-accent-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        {t('cta.title')}
      </h2>
      <p class="text-xl text-primary-100 mb-8">
        {t('cta.description')}
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="https://github.com/fractalbits-labs/fractalbits-main"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-medium rounded-lg hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          {t('cta.github')}
        </a>
        <a
          href="https://join.slack.com/t/fractalbitscommunity/shared_invite/zt-3j9b3iw0l-NFSW3cjo~DEF~jqfBp1mzA"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 border-2 border-white text-white font-medium rounded-lg hover:bg-white/10 transition-colors"
        >
          {t('cta.community')}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
