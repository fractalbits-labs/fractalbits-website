---
import { useTranslations, getLocalizedPath, defaultLang } from '../i18n';
import type { Lang } from '../i18n';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const links = {
  product: [
    { label: t('footer.features'), href: getLocalizedPath('/', lang) + '#features' },
    { label: t('footer.benchmarks'), href: getLocalizedPath('/', lang) + '#benchmarks' },
    { label: t('footer.blog'), href: getLocalizedPath('/blog', lang) },
  ],
  resources: [
    { label: t('footer.documentation'), href: 'https://github.com/fractalbits-labs/fractalbits-main/tree/main/docs', external: true },
    { label: t('footer.architecture'), href: 'https://github.com/fractalbits-labs/fractalbits-main/blob/main/docs/internals/ARCHITECTURE.md', external: true },
    { label: t('footer.s3api'), href: 'https://github.com/fractalbits-labs/fractalbits-main/blob/main/docs/S3_API_COMPATIBILITY.md', external: true },
    { label: t('footer.roadmap'), href: 'https://github.com/fractalbits-labs/fractalbits-main/blob/main/docs/ROADMAP.md', external: true },
  ],
  community: [
    { label: t('footer.github'), href: 'https://github.com/fractalbits-labs/fractalbits-main', external: true },
    { label: t('footer.slack'), href: 'https://join.slack.com/t/fractalbitscommunity/shared_invite/zt-3j9b3iw0l-NFSW3cjo~DEF~jqfBp1mzA', external: true },
    { label: t('footer.discussions'), href: 'https://github.com/fractalbits-labs/fractalbits-main/discussions', external: true },
  ],
};
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href={getLocalizedPath('/', lang)} class="text-xl font-bold text-white mb-4 block">{t('site.brand')}</a>
        <p class="text-sm text-gray-400">
          {t('site.tagline')}
        </p>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t('footer.product')}</h3>
        <ul class="space-y-2">
          {links.product.map(({ label, href }) => (
            <li>
              <a href={href} class="text-sm hover:text-white transition-colors">{label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t('footer.resources')}</h3>
        <ul class="space-y-2">
          {links.resources.map(({ label, href, external }) => (
            <li>
              <a
                href={href}
                class="text-sm hover:text-white transition-colors"
                {...(external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Community Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t('footer.community')}</h3>
        <ul class="space-y-2">
          {links.community.map(({ label, href, external }) => (
            <li>
              <a
                href={href}
                class="text-sm hover:text-white transition-colors"
                {...(external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-800">
      <p class="text-sm text-gray-400">
        &copy; {currentYear} {t('footer.copyright')}
      </p>
    </div>
  </div>
</footer>
