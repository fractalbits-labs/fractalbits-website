---
import { useTranslations, getLocalizedPath, getAlternateLanguagePath, languages, defaultLang } from '../i18n';
import type { Lang } from '../i18n';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const navLinks = [
  { href: getLocalizedPath('/', lang), label: t('nav.home'), key: '/' },
  { href: getLocalizedPath('/blog', lang), label: t('nav.blog'), key: '/blog' },
  { href: 'https://github.com/fractalbits-labs/fractalbits-main/tree/main/docs', label: t('nav.docs'), external: true },
  { href: 'https://github.com/fractalbits-labs/fractalbits-main', label: t('nav.github'), external: true },
];

const currentPath = Astro.url.pathname;
const otherLang = lang === 'en' ? 'zh' : 'en';
const switchPath = getAlternateLanguagePath(currentPath, lang, otherLang);
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a href={getLocalizedPath('/', lang)} class="inline-flex items-center gap-2 py-2">
        <img src="/logo-icon.png" alt={t('site.brand')} class="h-8 w-auto" />
        <span class="text-xl font-bold text-primary-600">{t('site.brand')}</span>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(({ href, label, external }) => (
          <a
            href={href}
            class:list={[
              'text-sm font-medium transition-colors',
              currentPath === href ? 'text-primary-600' : 'text-gray-600 hover:text-gray-900'
            ]}
            {...(external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
          >
            {label}
            {external && (
              <svg class="inline-block w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            )}
          </a>
        ))}
        <a
          href={switchPath}
          class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors px-2 py-1 border border-gray-300 rounded-md hover:bg-gray-50"
        >
          {languages[otherLang]}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Nav -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {navLinks.map(({ href, label, external }) => (
        <a
          href={href}
          class:list={[
            'block py-2 text-base font-medium transition-colors',
            currentPath === href ? 'text-primary-600' : 'text-gray-600 hover:text-gray-900'
          ]}
          {...(external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
        >
          {label}
        </a>
      ))}
      <a
        href={switchPath}
        class="block py-2 text-base font-medium text-gray-600 hover:text-gray-900 transition-colors"
      >
        {languages[otherLang]}
      </a>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
