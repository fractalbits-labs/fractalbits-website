---
import { useTranslations, defaultLang } from '../i18n';
import type { Lang } from '../i18n';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const features = [
  {
    title: t('features.iops.title'),
    description: t('features.iops.description'),
    icon: 'rocket',
  },
  {
    title: t('features.atomic.title'),
    description: t('features.atomic.description'),
    icon: 'refresh',
  },
  {
    title: t('features.storage.title'),
    description: t('features.storage.description'),
    icon: 'database',
  },
  {
    title: t('features.byoc.title'),
    description: t('features.byoc.description'),
    icon: 'cloud',
  },
];

const icons: Record<string, string> = {
  rocket: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />',
  refresh: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />',
  database: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />',
  cloud: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />',
};
---

<section id="features" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {t('features.title')}
      </h2>
      <p class="max-w-2xl mx-auto text-lg text-gray-600">
        {t('features.description')}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map(({ title, description, icon }) => (
        <div class="relative p-6 bg-gray-50 rounded-2xl hover:bg-gradient-to-br hover:from-primary-50 hover:to-accent-50 transition-all duration-300 group">
          <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary-200 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[icon]} />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
          <p class="text-gray-600">{description}</p>
        </div>
      ))}
    </div>

    <!-- Tech Stack -->
    <div class="mt-16 text-center">
      <p class="text-sm text-gray-500 mb-4">{t('features.powered')}</p>
      <div class="flex justify-center items-center gap-8 flex-wrap">
        <div class="flex items-center gap-2 text-gray-700">
          <span class="font-semibold">{t('features.rust')}</span>
          <span class="text-gray-400">{t('features.rust.desc')}</span>
        </div>
        <div class="flex items-center gap-2 text-gray-700">
          <span class="font-semibold">{t('features.zig')}</span>
          <span class="text-gray-400">{t('features.zig.desc')}</span>
        </div>
        <div class="flex items-center gap-2 text-gray-700">
          <span class="font-semibold">{t('features.iouring')}</span>
          <span class="text-gray-400">{t('features.iouring.desc')}</span>
        </div>
        <div class="flex items-center gap-2 text-gray-700">
          <span class="font-semibold">{t('features.art')}</span>
          <span class="text-gray-400">{t('features.art.desc')}</span>
        </div>
      </div>
    </div>
  </div>
</section>
