---
const features = [
  {
    title: '~1M IOPS',
    description: 'Achieve up to 1 million 4K read IOPS with p99 latency around 5ms. Built for demanding workloads like AI training and data analytics.',
    icon: 'rocket',
  },
  {
    title: 'Atomic Rename',
    description: 'Native atomic rename support for both objects and directories. A capability standard S3 lacks, essential for managing datasets and checkpoints.',
    icon: 'refresh',
  },
  {
    title: 'Two-Tier Storage',
    description: 'NVMe SSD tier for hot small objects with single-digit millisecond latency, S3 backend tier for larger objects to optimize costs.',
    icon: 'database',
  },
  {
    title: '5-Minute BYOC',
    description: 'Deploy to any AWS region with a single command. Bring Your Own Cloud deployment gets you running in under 5 minutes.',
    icon: 'cloud',
  },
];

const icons: Record<string, string> = {
  rocket: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />',
  refresh: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />',
  database: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />',
  cloud: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />',
};
---

<section id="features" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Built for Performance
      </h2>
      <p class="max-w-2xl mx-auto text-lg text-gray-600">
        FractalBits combines cutting-edge technologies to deliver exceptional performance
        that exceeds AWS S3 Express One Zone, with much lower cost.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map(({ title, description, icon }) => (
        <div class="relative p-6 bg-gray-50 rounded-2xl hover:bg-gradient-to-br hover:from-primary-50 hover:to-accent-50 transition-all duration-300 group">
          <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary-200 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[icon]} />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
          <p class="text-gray-600">{description}</p>
        </div>
      ))}
    </div>

    <!-- Tech Stack -->
    <div class="mt-16 text-center">
      <p class="text-sm text-gray-500 mb-4">Powered by</p>
      <div class="flex justify-center items-center gap-8 flex-wrap">
        <div class="flex items-center gap-2 text-gray-700">
          <span class="font-semibold">Rust</span>
          <span class="text-gray-400">API Gateway</span>
        </div>
        <div class="flex items-center gap-2 text-gray-700">
          <span class="font-semibold">Zig</span>
          <span class="text-gray-400">Data Plane</span>
        </div>
        <div class="flex items-center gap-2 text-gray-700">
          <span class="font-semibold">io_uring</span>
          <span class="text-gray-400">Async I/O</span>
        </div>
        <div class="flex items-center gap-2 text-gray-700">
          <span class="font-semibold">Fractal ART</span>
          <span class="text-gray-400">Metadata Engine</span>
        </div>
      </div>
    </div>
  </div>
</section>
