---
import BaseLayout from './BaseLayout.astro';
import { defaultLang } from '../i18n';
import type { Lang } from '../i18n';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author?: string;
  tags?: string[];
  image?: string;
  lang?: Lang;
}

const { title, description, pubDate, author, tags, image, lang = defaultLang } = Astro.props;

const dateLocale = lang === 'zh' ? 'zh-CN' : 'en-US';
const formattedDate = pubDate.toLocaleDateString(dateLocale, {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${title} | ${lang === 'zh' ? '分形智存博客' : 'FractalBits Blog'}`} description={description} image={image} lang={lang}>
  <article class="max-w-3xl mx-auto px-4 py-16">
    <header class="mb-8">
      <div class="flex items-center gap-2 text-sm text-gray-500 mb-4">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {author && (
          <>
            <span>|</span>
            <span>{author}</span>
          </>
        )}
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{title}</h1>
      <p class="text-xl text-gray-600">{description}</p>
      {tags && tags.length > 0 && (
        <div class="flex gap-2 mt-4">
          {tags.map((tag) => (
            <span class="px-3 py-1 text-sm bg-primary-100 text-primary-700 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>
    <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-a:text-primary-600 prose-code:text-primary-700 prose-code:bg-gray-100 prose-code:px-1 prose-code:py-0.5 prose-code:rounded">
      <slot />
    </div>
  </article>
</BaseLayout>
